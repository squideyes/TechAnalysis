<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>

    <IsPackable>false</IsPackable>

    <AssemblyName>SquidEyes.UnitTests</AssemblyName>

    <RootNamespace>SquidEyes.UnitTests</RootNamespace>

    <Authors>Louis S. Berman</Authors>

    <Description>A set of unit-tests related to the SquidEyes.TechAnalysis project</Description>

    <Copyright>Copyright 2021 by Louis S. Berman</Copyright>

    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <PackageProjectUrl>https://github.com/squideyes/TechAnalysis</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Indicators\Baselines\AtrBaseline.csv" />
    <Content Include="Indicators\Baselines\BollingerBandsBaseline.csv" />
    <Content Include="Indicators\Baselines\CciBaseline.csv" />
    <Content Include="Indicators\Baselines\DemaBaseline.csv" />
    <Content Include="Indicators\Baselines\EmaBaseline.csv" />
    <Content Include="Indicators\Baselines\KamaBaseline.csv" />
    <Content Include="Indicators\Baselines\KeltnerChannelBaseline.csv" />
    <Content Include="Indicators\Baselines\LinRegBaseline.csv" />
    <Content Include="Indicators\Baselines\MacdBaseline.csv" />
    <Content Include="Indicators\Baselines\RsiBaseline.csv" />
    <Content Include="Indicators\Baselines\SmaaBaseline.csv" />
    <Content Include="Indicators\Baselines\SmaBaseline.csv" />
    <Content Include="Indicators\Baselines\StdDevBaseline.csv" />
    <Content Include="Indicators\Baselines\StochasticsBaseline.csv" />
    <Content Include="Indicators\Baselines\TemaBaseline.csv" />
    <Content Include="Indicators\Baselines\WmaBaseline.csv" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DeepCloner" Version="0.10.2" />
    <PackageReference Include="FluentAssertions" Version="6.1.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.11.0" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.3">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="coverlet.collector" Version="3.1.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TechAnalysis\TechAnalysis.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Baselines.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Baselines.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Baselines.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Baselines.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
